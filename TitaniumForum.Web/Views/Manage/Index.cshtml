@model IndexViewModel
@{
    ViewBag.Title = "Manage";
}

<h2>@ViewBag.Title</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Change your account settings</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Profile Image:</dt>
        <dd><img src="@Model.ProfileImage" alt="Profile Image" width="250" height="250" /></dd>
    </dl>
    <dl class="dl-horizontal">
        <dt>Update Profile Image:</dt>
        <dd>
            @using (Html.BeginForm("Index", "Manage", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                <input type="file" name="Image" accept="image/*" style="display:none" />
                <button type="button" class="btn btn-primary" onclick="document.getElementsByName('Image')[0].click()">
                    Choose Image
                </button>
                <button type="submit" class="btn btn-default">Save</button>
            }
        </dd>
    </dl>
    <dl class="dl-horizontal">
        <dt>Password:</dt>
        <dd> [ @Html.ActionLink("Change your password", "ChangePassword") ] </dd>
    </dl>
</div>