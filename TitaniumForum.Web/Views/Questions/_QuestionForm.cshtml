@model QuestionFormViewModel

@Html.AntiForgeryToken()
<div class="form-group">
    @Html.LabelFor(m => m.Question.Title, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.TextBoxFor(m => m.Question.Title, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Question.Title, string.Empty, new { @class = "text-danger" })
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Question.Content, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.TextAreaFor(m => m.Question.Content, new { @class = "form-control", rows = 10 })
        @Html.ValidationMessageFor(m => m.Question.Content, string.Empty, new { @class = "text-danger" })
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Question.Tags, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.TextBoxFor(m => m.Question.Tags, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Question.Tags, string.Empty, new { @class = "text-danger" })
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.SubCategoryId, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.DropDownListFor(m => m.SubCategoryId, Model.SubCategories, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.SubCategoryId, string.Empty, new { @class = "text-danger" })
    </div>
</div>
<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <input class="btn btn-success" type="submit" value="Save Question" />
    </div>
</div>