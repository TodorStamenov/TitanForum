@model ListQuestionsViewModel

@{
    ViewBag.Title = "By Category";
    string previouseDisabled = Model.CurrentPage == 1 ? "disabled" : string.Empty;
    string nextDisabled = Model.CurrentPage == Model.TotalPages ? "disabled" : string.Empty;
}

<br />
<div class="row">
    <div class="col-md-3">
        @Html.Action("Invoke", "Menu", new { categoryId = Model.CategoryId })
    </div>
    <div class="col-md-9">
        @Html.Partial("_ListQuestions", Model.Questions)

        @if (Model.Questions.Any())
        {
            <ul class="pagination">
                <li class="page-item">
                    <a class="page-link @previouseDisabled" href="@Url.Action("ByCategory", "Questions", new { area = string.Empty, page = Model.PrevPage, id = Model.CategoryId})" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
                @for (int i = Model.FirstPage; i <= Model.LastPage; i++)
                {
                    <li class="page-item @(Model.CurrentPage == i ? "active" : string.Empty)">
                        <a class="page-link @(Model.CurrentPage == i ? "disabled" : string.Empty)" href="@Url.Action("ByCategory", "Questions", new { area = string.Empty, page = i, id = Model.CategoryId})">@i</a>
                    </li>
                }
                <li class="page-item">
                    <a class="page-link @nextDisabled" href="@Url.Action("ByCategory", "Questions", new { area = string.Empty, page = Model.NextPage, id = Model.CategoryId})" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
            </ul>
        }
    </div>
</div>