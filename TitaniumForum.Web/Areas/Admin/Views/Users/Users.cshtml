@model ListUsersViewModel

@{
    ViewData["Title"] = $"{(Model.Search != null && Model.Search != string.Empty ? string.Empty : "All")} Users";
    string previouseDisabled = Model.CurrentPage == 1 ? "disabled" : string.Empty;
    string nextDisabled = Model.CurrentPage == Model.TotalPages ? "disabled" : string.Empty;
    string userRole = Model.UserRole != null ? Model.UserRole : string.Empty;
}

<div class="row">
    <h2>@ViewData["Title"] @(Model.UserRole != null && Model.UserRole != string.Empty ? $"in Role {Model.UserRole}" : string.Empty)</h2>

    @using (Html.BeginForm("Users", "Users", new { area = "Admin" }, FormMethod.Post, new { @class = "form-inline" }))
    {

        @Html.HiddenFor(m => m.UserRole)
        @Html.TextBoxFor(m => m.Search, new { @class = "form-control", placeholder = "Search..." })
        <input class="btn btn-success" type="submit" value="Search" />
    }
    <br />

    <a href="@Url.Action("Users", "Users", new { area = "Admin" })" class="btn btn-primary">All Users</a>

    @foreach (var role in Model.Roles)
    {
        <a href="@Url.Action("Users", "Users", new { area = "Admin", userRole = role.Name })" class="btn btn-primary">@role.Name</a>
    }
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.Username</td>
                    <td>@user.Email</td>
                    <td>
                        <a href="@Url.Action("EditRoles", "Users", new { area = "Admin", id = user.Id })" class="btn btn-primary">Manage</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@if (Model.Users.Any())
{
    <div class="row">
        <ul class="pagination">
            <li class="page-item">
                <a class="page-link @previouseDisabled" href="@Url.Action("Users", "Users", new { area = "Admin", page = Model.PrevPage, userRole = userRole, search = Model.Search})" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>
            @for (int i = Model.FirstPage; i <= Model.LastPage; i++)
            {
                <li class="page-item @(Model.CurrentPage == i ? "active" : string.Empty)">
                    <a class="page-link @(Model.CurrentPage == i ? "disabled" : string.Empty)" href="@Url.Action("Users", "Users", new { area = "Admin", page = i, userRole = userRole, search = Model.Search})">@i</a>
                </li>
            }
            <li class="page-item">
                <a class="page-link @nextDisabled" href="@Url.Action("Users", "Users", new { area = "Admin", page = Model.NextPage, userRole = userRole, search = Model.Search})" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span>
                </a>
            </li>
        </ul>
    </div>
}