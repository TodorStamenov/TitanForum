@model ListUsersViewModel

@{
    ViewData["Title"] = $"{(Model.Search != null ? string.Empty : "All")} Users";
    string previouseDisabled = Model.CurrentPage == 1 ? "disabled" : string.Empty;
    string nextDisabled = Model.CurrentPage == Model.TotalPages ? "disabled" : string.Empty;
    string userRole = Model.UserRole != null ? Model.UserRole : string.Empty;
}

<div class="row">
    <h2>@ViewData["Title"] @(Model.UserRole != null ? $"in Role {Model.UserRole}" : string.Empty)</h2>

    <form class="form-inline" asp-area="Admin" asp-controller="Users" asp-action="Users">
        <input type="hidden" asp-for="UserRole" />
        <input class="form-control" asp-for="Search" placeholder="Search..." />
        <input class="btn btn-success" type="submit" value="Search" />
    </form>
    <br />

    <a class="btn btn-primary" asp-area="Admin" asp-controller="Users" asp-action="Users">All Users</a>

    @foreach (var role in Model.Roles)
    {
        <a class="btn btn-primary" asp-area="Admin" asp-controller="Users" asp-action="Users" asp-route-userRole="@role.Name">@role.Name</a>
    }
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.Username</td>
                    <td>@user.Email</td>
                    <td>
                        <a asp-area="Admin" asp-controller="Users" asp-action="EditRoles" asp-route-id="@user.Id" class="btn btn-primary">Manage</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@if (Model.Users.Any())
{
    <div class="row">
        <ul class="pagination">
            <li class="page-item">
                <a class="page-link @previouseDisabled" href="@Url.Action("Users", "Users", new { area = "Admin", page = Model.PrevPage, userRole = userRole, search = Model.Search})" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>
            @for (int i = Model.FirstPage; i <= Model.LastPage; i++)
            {
                <li class="page-item @(Model.CurrentPage == i ? "active" : string.Empty)">
                    <a class="page-link @(Model.CurrentPage == i ? "disabled" : string.Empty)" href="@Url.Action("Users", "Users", new { area = "Admin", page = i, userRole = userRole, search = Model.Search})">@i</a>
                </li>
            }
            <li class="page-item">
                <a class="page-link @nextDisabled" asp-area="Admin" asp-controller="Users" asp-action="Users" asp-route-page="@Model.NextPage" asp-route-userRole="@userRole" asp-route-search="@Model.Search" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span>
                </a>
            </li>
        </ul>
    </div>
}